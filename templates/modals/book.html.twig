<div class="modal" data-modal="true" id="book_modal">
    <div class="modal-content max-w-[600px] top-[15%]">
        <div class="modal-header py-4 px-5">
            <h3 class="modal-title">Ma lecture</h3>
        </div>
        <div class="modal-body p-0 pb-5">
            <div class="scrollable-y-auto" data-scrollable="true" data-scrollable-max-height="auto"
                 data-scrollable-offset="300px">
                <form id="bookReadForm" method="POST">
                    <div class="flex flex-col gap-5 p-5">
                        <div class="flex flex-col gap-1">
                            <label for="book" class="form-label font-normal text-gray-900">Livre</label>
                            <select id="book" name="book" class="select">
                                {% for book in books %}
                                    <option value="{{ book.id }}">{{ book.name }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="flex flex-col gap-1">
                            <label class="form-label font-normal text-gray-900">Mes notes</label>
                            <div class="flex flex-col w-full gap-1">
                            <textarea name="description" class="textarea"
                                      placeholder="Notez-ici les idées importantes de l'oeuvre."></textarea>
                            </div>
                        </div>

                        <div class="flex flex-col gap-1">
                            <label for="rating" class="form-label font-normal text-gray-900">Note</label>
                            <select id="rating" name="rating" class="select">
                                <option>1</option>
                                <option>1.5</option>
                                <option>2</option>
                                <option>2.5</option>
                                <option>3</option>
                                <option>3.5</option>
                                <option>4</option>
                                <option>4.5</option>
                                <option>5</option>
                            </select>
                        </div>

                        <div class="flex gap-1">
                            <label class="switch">
                                <span class="switch-label font-normal text-gray-900">Lecture terminée</span>
                                <input name="is_read" type="checkbox" value="1"/>
                            </label>
                        </div>

                        <div class="flex">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('bookReadForm');
        const isReadCheckbox = form.querySelector('input[name="is_read"]');
        const modal = document.getElementById('book_modal');

        if (form) {
            isReadCheckbox.addEventListener('change', function () {
                isReadCheckbox.value = isReadCheckbox.checked ? 1 : 0;
            });

            form.addEventListener('submit', function (event) {
                event.preventDefault();

                const formData = new FormData(form);
                const jsonData = {};
                formData.forEach((value, key) => {
                    jsonData[key] = value;
                });

                jsonData['is_read'] = isReadCheckbox.checked;

                const xhr = new XMLHttpRequest();
                xhr.open('POST', '/book/read', true);
                xhr.setRequestHeader('Content-Type', 'application/json');

                xhr.onload = function () {
                    if (xhr.status >= 200 && xhr.status < 300) {
                        form.reset();
                        document.querySelector('[data-modal-toggle="#book_modal"]').click();
                    } else {
                        try {
                            const response = JSON.parse(xhr.responseText);
                            alert('An error occurred: ' + response.error);
                        } catch (e) {
                            console.error('Error parsing JSON:', e);
                            alert('An error occurred while processing the response.');
                        }
                    }
                };

                xhr.onerror = function () {
                    alert('An error occurred during the request.');
                };

                xhr.send(JSON.stringify(jsonData));
            });
        } else {
            console.error('Form not found');
        }
    });
</script>